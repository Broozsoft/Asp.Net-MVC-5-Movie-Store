<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")



    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Content/style.css" rel="stylesheet" />
    <link href="~/Content/AdminStyel.css" rel="stylesheet" />
</head>
<body>
@Html.Partial("PublicMenuNav")

    <nav class="navbar navbar-inverse sidebar" role="navigation">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-sidebar-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand  toggle-btn" href="">Movie Store </a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-sidebar-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="@Url.Action("OpenCart","ShopingCart", new { id=Session["OrderId"]})">See Your Cart<span style="font-size:16px;" class="pull-right hidden-xs showopacity"><i class="fa fa-shopping-cart" aria-hidden="true"></i></span></a></li>
                    <li><a href="@Url.Action("PreviousOrder","Orders")">Previous Purchases<span style="font-size:16px;" class="pull-right hidden-xs showopacity"><i class="fa fa-money" aria-hidden="true"></i></span></a></li>
                    <li><a href="@Url.Action("Index","Manage")">Profile<span style="font-size:16px;" class="pull-right hidden-xs showopacity glyphicon glyphicon-user"></span></a></li>
                    @if (User.IsInRole("Admin"))
                    {
                    <li><a href="@Url.Action("Chat","Home")">Messages<span style="font-size:16px;" class="pull-right hidden-xs showopacity glyphicon glyphicon-envelope"></span></a></li>
                    <li class="dropdown">
                        <a href="@Url.Action("Index","Movies")" class="dropdown-toggle" data-toggle="dropdown">Movie <span class="caret"></span><span style="font-size:16px;" class="pull-right hidden-xs showopacity"><i class="fa fa-film" aria-hidden="true"></i></span></a>
                        <ul class="dropdown-menu forAnimate" role="menu">
                            <li><a href="@Url.Action("Create","Movies")">Add</a></li>
                            <li><a href="@Url.Action("Index","Movies")">Manage</a></li>
                        </ul>
                    </li>
                    
                    <li>
                        <a href="@Url.Action("Index", "Orders")" class="dropdown-toggle" >Orders <span style="font-size:16px;" class="pull-right hidden-xs showopacity glyphicon glyphicon-asterisk"></span> </a>
                    </li>

                    <li>
                        <a href="@Url.Action("Index", "Role")" class="dropdown-toggle">Roles <span style="font-size:16px;" class="pull-right hidden-xs showopacity"><i class="fa fa-users" aria-hidden="true"></i></span> </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Account")" class="dropdown-toggle">Users <span style="font-size:16px;" class="pull-right hidden-xs showopacity"><i class="fa fa-user-circle" aria-hidden="true"></i></span> </a>
                    </li>

                    <li>
                        <a href="@Url.Action("Index", "Customers")" class="dropdown-toggle">Simple Users <span style="font-size:16px;" class="pull-right hidden-xs showopacity"><i class="fa fa-user-o" aria-hidden="true"></i></span> </a>
                    </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <script>

    </script>
    <div class="main">
        @RenderBody()
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)
</body>
</html>
